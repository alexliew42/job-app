<h1>Jobs<h1>
<% if current_user && current_user.admin%>
  <a href="/jobs/new">Create Job</a>
<%end%>
<%@jobs.each do |job|%>
  
  <div class="card">
    <h5 class="card-header"><%=job.title%></h5>
    <div class="card-body">
      <%if job.company_id == nil%>
        <p class="card-text"><%=job.description%></p>
        <p style="font-size: 20px; font-style: italic;">Salary Range: <%=job.salary_range%></p>
        <a href="<%=job.url%>" class="btn btn-primary">Go to Website</a>
      <%else%>
        <h5 class="card-title"><%=Company.find_by(id: job.company_id).name%></h5>
        <p class="card-text"><%=job.description%></p>
        <p style="font-size: 20px; font-style: italic;">Salary Range: <%=job.salary_range%></p>
        <a href="<%=job.url%>" class="btn btn-primary">Apply Here</a>
      <%end%>
    </div>
  </div>
  
  
  
  

<%end%>

